
<div class="container">
  <div class="row">
      <h1 class="display-4">Lista de Eventos</h1>
     
        <% @eventos.each do |evento| %>
         <div class="col-md-4">
          <div class="card mt-3">
            <img class="card-img-top" src="<%= evento.imagen_url %>" alt="<%= evento.nombre %>">
            <div class="card-body">
              <h5 class="card-title"><%= evento.nombre %></h5>
              <p class="card-text"><%= evento.descripcion %></p>
              <p class="card-date"><%= evento.fecha.strftime("%Y-%m-%d") %></p>
              <%= link_to 'Reservar', reservar_evento_path(evento), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
        <% end %>
      
  </div>
</div>

